{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/__tests__",
        "src/examples",
        "src/test_*.ts",
        "src/**/*.test.ts",
        "src/**/*.spec.ts"
    ]
}