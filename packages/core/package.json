{
  "name": "@contex/core",
  "version": "0.1.0",
  "description": "Core primitives for Contex (Tokenizer, TENS Encoder/Decoder)",
  "license": "MIT",
  "author": "Contex Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/contex/contex.git",
    "directory": "packages/core"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "contex",
    "llm",
    "token",
    "tens",
    "context-window",
    "optimization",
    "tokenizer",
    "ai"
  ],
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./vercel": {
      "types": "./dist/vercel.d.ts",
      "import": "./dist/vercel.js",
      "default": "./dist/vercel.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "pnpm build",
    "test": "vitest run",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "js-tiktoken": "^1.0.10"
  },
  "devDependencies": {
    "fast-check": "^4.5.3",
    "rimraf": "^5.0.0",
    "typescript": "^5.7.0",
    "vitest": "^1.6.0"
  }
}