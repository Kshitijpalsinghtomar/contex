        "check:structural-integrity": "node scripts/check-structural-integrity.mjs",
        "check:stabilization-freeze": "node scripts/check-stabilization-freeze.mjs",
        "generate:ci-scorecard-artifacts": "node scripts/generate-ci-scorecard-artifacts.mjs",
        "generate:week4-proof-pack": "node scripts/generate-week4-proof-pack.mjs",
        "cli:status:ci": "pnpm --filter @contex-llm/cli exec node --import tsx src/cli.ts status --json",
        "benchmark": "turbo run benchmark",
        "clean": "turbo run clean"
    },
    "devDependencies": {
        "@biomejs/biome": "^1.9.0",
        "@types/node": "^22.0.0",
