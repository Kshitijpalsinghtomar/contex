    "repository": {
        "type": "git",
        "url": "https://github.com/kshitijpalsinghtomar/contex-llm.git"
    },
    "description": "The token compiler for LLMs â€” canonical IR, deterministic tokens, prefix cache hits",
    "packageManager": "pnpm@9.15.4",
    "scripts": {
        "build": "turbo run build",
        "test": "turbo run test",
        "lint": "biome check .",
        "lint:fix": "biome check --apply .",
        "format": "biome format --write .",
        "check:config-parity": "node scripts/check-config-parity.mjs",
        "check:claim-evidence": "node scripts/check-claim-evidence.mjs",
        "check:docs-snippets": "node scripts/check-docs-snippets.mjs",
        "check:canonical-contract": "node scripts/check-canonical-execution-contract.mjs",
