{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "inputs": [
                "src/**"
            ],
            "outputs": [
                "dist/**"
            ]
        },
        "test": {
            "dependsOn": [
                "^build"
            ],
            "inputs": [
                "src/**",
                "tests/**"
            ]
        },
        "benchmark": {
            "dependsOn": [
                "^build"
            ],
            "inputs": [
                "src/**"
            ]
        },
        "lint": {},
        "clean": {
            "cache": false
        }
    }
}